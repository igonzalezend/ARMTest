{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "vnetName": {
        "type": "string",
        "defaultValue": "EndavaTalentVNet",
        "metadata": {
          "description": "VNet name"
        }
      },
      "vnetAddressPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.0/16"
      },
      "dbSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.3.0/24"
      },
      "dbSubnetName": {
        "type": "string",
        "defaultValue": "dbSubnet"
      },
      "frontendSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.1.0/24"
      },
      "frontendSubnetName": {
        "type": "string",
        "defaultValue": "frontendSubnet"
      },
      "backendSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.2.0/24"
      },
      "backendSubnetName": {
        "type": "string",
        "defaultValue": "backendSubnet"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('vnetName')]",
        "location": "[parameters('location')]",
        "apiVersion": "2018-12-01",
  
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetAddressPrefix')]"
            ]
          }
        },
  
        "resources": [
          {
            "apiVersion": "2018-12-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('backendSubnetName')]",
            "dependsOn": [
              "[parameters('vnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('backendSubnetPrefix')]"
            }
          },
          {
            "apiVersion": "2018-12-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('frontendSubnetName')]",
            "dependsOn": [
              "[parameters('vnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('frontendSubnetPrefix')]"
            }
          },
          {
            "apiVersion": "2018-12-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('dbSubnetName')]",
            "dependsOn": [
              "[parameters('vnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('dbSubnetPrefix')]",
              "serviceEndpoints":[
                {
                  "service": "Microsoft.AzureCosmosDB",
                  "locations": [
                    "[resourceGroup().location]"
                  ]
                }
              ]
            }
          }
        ]
        
      }
    ],
    "outputs": {
      "vNetName": {
        "type": "string",
        "value": "[parameters('vnetName')]"
      },
      "dbSubnetName": {
        "type": "string",
        "value": "[parameters('dbSubnetName')]"
      },
      "backendSubnetName": {
        "type": "string",
        "value": "[parameters('backendSubnetName')]"
      },
      "frontendSubnetName": {
        "type": "string",
        "value": "[parameters('frontendSubnetName')]"
      }
    }
  }