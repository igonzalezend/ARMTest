{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "vnetName": {
        "type": "string",
        "defaultValue": "EndavaTalentVNet",
        "metadata": {
          "description": "Virtual network name"
        }
      },
      "vnetAddressPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.0/16"
      },
      "kubernetesClusterSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.0/24"
      },
      "kubernetesClusterSubnetName": {
        "type": "string",
        "defaultValue": "endavaTalentCluster"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('vnetName')]",
        "location": "[parameters('location')]",
        "apiVersion": "2018-12-01",
  
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetAddressPrefix')]"
            ]
          }
        },

        "resources": [
          {
            "apiVersion": "2018-12-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('kubernetesClusterSubnetName')]",
            "dependsOn": [
              "[parameters('vnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('kubernetesClusterSubnetPrefix')]"
            }
          }
        ]
      }
    ],
    "outputs": {
      "vNetName": {
        "type": "string",
        "value": "[parameters('vnetName')]"
      },
      "kubernetesClusterSubnetName": {
        "type": "string",
        "value": "[parameters('kubernetesClusterSubnetName')]"
      }
    }
  }