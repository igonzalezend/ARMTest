{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "image": {
        "type": "string",
        "metadata": {
          "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "igonzalezend/cicdchallenge:51"
      },
      "port1": {
        "type": "string",
        "metadata": {
          "description": "Port to open on the container."
        },
        "defaultValue": "8000"
      },
      "port2": {
        "type": "string",
        "metadata": {
          "description": "Port to open on the container."
        },
        "defaultValue": "8001"
      },
      "cpuCores": {
        "type": "string",
        "metadata": {
          "description": "The number of CPU cores to allocate to the container. Must be an integer."
        },
        "defaultValue": "1.0"
      },
      "memoryInGb": {
        "type": "string",
        "metadata": {
          "description": "The amount of memory to allocate to the container in gigabytes."
        },
        "defaultValue": "1"
      },
      "networkProfileName1": {
          "type": "string"
      },
      "networkProfileName2": {
        "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2018-04-01",
        "name": "Test",
        "location": "[parameters('location')]",

        "properties": {
          "osType": "Linux",
          "restartPolicy": "Always",
          "containers": [
            {
              "name": "test",
              "properties": {
                "image": "[parameters('image')]",
                "ports": [
                  {
                    "port": "[parameters('port1')]",
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "[parameters('cpuCores')]",
                    "memoryInGB": "[parameters('memoryInGb')]"
                  }
                }
              }
            }
          ],
          "networkProfile": {
            "Id": "[resourceId('Microsoft.Network/networkProfiles', parameters('networkProfileName1'))]"
            }
        }
      },
      {
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2018-04-01",
        "name": "Test",
        "location": "[parameters('location')]",

        "properties": {
          "osType": "Linux",
          "restartPolicy": "Always",
          "containers": [
            {
              "name": "test",
              "properties": {
                "image": "[parameters('image')]",
                "ports": [
                  {
                    "port": "[parameters('port2')]",
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "[parameters('cpuCores')]",
                    "memoryInGB": "[parameters('memoryInGb')]"
                  }
                }
              }
            }
          ],
          "networkProfile": {
              "Id": "[resourceId('Microsoft.Network/networkProfiles', parameters('networkProfileName2'))]"
          }
        }

      }
    ],
    "outputs": {}
  }