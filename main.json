{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "vNetTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/igonzalezend/ARMTest/develop/vpn.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "networkProfile1Template",
            "dependsOn": [
                "vNetTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/igonzalezend/ARMTest/develop/networkProfiles1.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[reference('vNetTemplate').outputs.vNetName.value]"
                    },
                    "subnetName":{
                        "value": "[reference('vNetTemplate').outputs.subnet1Name.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "networkProfile2Template",
            "dependsOn": [
                "vNetTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/igonzalezend/ARMTest/develop/networkProfiles2.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[reference('vNetTemplate').outputs.vNetName.value]"
                    },
                    "subnetName":{
                        "value": "[reference('vNetTemplate').outputs.subnet2Name.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "containersTemplate",
            "dependsOn": [
                "vNetTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/igonzalezend/ARMTest/develop/containerGroups.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkProfileName1": {
                        "value": "[reference('networkProfile1Template').outputs.networkProfileName.value]"
                    },
                    "networkProfileName2":{
                        "value": "[reference('networkProfile2Template').outputs.networkProfileName.value]"
                    }
                }
            }
        }
    ]
}