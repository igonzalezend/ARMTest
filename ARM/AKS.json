{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "defaultValue":"EndavaTalentCluster",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the Managed Cluster resource."
            }
        },
        "osDiskSizeGB": {
            "type": "int",
            "defaultValue": 30,
            "metadata": {
                "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            }
        },
        "agentCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "The number of nodes for the cluster."
            }
        },
        "agentVMSize": {
            "type": "string",
            "defaultValue": "Standard_B2s",
            "metadata": {
                "description": "The size of the Virtual Machine."
            }
        },
        "osType": {
            "type": "string",
            "defaultValue": "Linux",
            "metadata": {
                "description": "The type of operating system."
            }
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.12.7",
            "metadata": {
                "description": "The version of Kubernetes."
            }
        }, 
        "vnetSubnetID": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network Subnet's ID"
            }
        },
        "servicePrincipalClientId": {
            "type": "securestring",
            "metadata": {
                "description": "Service principal's appId"
            }
        }, 
        "servicePrincipalClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Service principal's password"
            }
        }
    },
    "variables": {
        "vNetName": "EndavaTalentVNet",
        "subnetName": "endavaTalentCluster"
    },
    "resources": [
        {
            "apiVersion": "2018-03-31",
            "type": "Microsoft.ContainerService/managedClusters",
            "location": "[parameters('location')]",
            "name": "[parameters('clusterName')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "dnsPrefix": "[concat(parameters('clusterName'), '-dns')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": "[parameters('agentCount')]",
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "[parameters('osType')]",
                        "storageProfile": "ManagedDisks",
                        "maxPods": 30,
                        "vnetSubnetID": "[parameters('vnetSubnetID')]"
                    }
                ],
                "enableRBAC": true,
                "networkProfile": {
                    "networkPlugin": "azure",
                    "serviceCidr": "10.1.0.0/16",
                    "dnsServiceIP": "10.1.0.10",
                    "dockerBridgeCidr": "172.17.0.1/16"
                },
                "servicePrincipalProfile": {
                    "clientId": "[parameters('servicePrincipalClientId')]",
                    "Secret": "[parameters('servicePrincipalClientSecret')]"
                },
                "addonProfiles": {
                    "httpApplicationRouting": {
                        "enabled": false,
                        "config": null
                    }
                }
            }
        }
    ]
}