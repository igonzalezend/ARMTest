{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "frontendContainerName": {
        "type": "string",
        "defaultValue": "Frontend"
      },
      "backendContainerName": {
        "type": "string",
        "defaultValue": "Backend"
      },
      "frontendImage": {
        "type": "string",
        "metadata": {
          "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "igonzalezend/profiledb_frontend:latest"
      },
      "backendImage": {
        "type": "string",
        "metadata": {
          "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "igonzalezend/profiledb_backend:latest"
      },
      "frontendPort": {
        "type": "string",
        "metadata": {
          "description": "Port to open on the container."
        },
        "defaultValue": "3000"
      },
      "backendPort": {
        "type": "string",
        "metadata": {
          "description": "Port to open on the container."
        },
        "defaultValue": "6200"
      },
      "cpuCores": {
        "type": "string",
        "metadata": {
          "description": "The number of CPU cores to allocate to the container. Must be an integer."
        },
        "defaultValue": "1.0"
      },
      "memoryInGb": {
        "type": "string",
        "metadata": {
          "description": "The amount of memory to allocate to the container in gigabytes."
        },
        "defaultValue": "1"
      },
      "connectionString": {
          "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2018-07-01",
        "name": "[parameters('frontendContainerName')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[parameters('backendContainerName')]"
        ],
        "properties": {
          "osType": "Linux",
          "restartPolicy": "Always",
          "containers": [
            {
              "name": "[parameters('frontendContainerName')]",
              "properties": {
                "image": "[parameters('frontendImage')]",
                "environmentVariables":[
                    {
                        "name": "BACKEND_ADDRESS",
                        "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('backendContainerName'))).ipAddress.ip]"
                    }
                ],
                "ports": [
                  {
                    "port": "[parameters('frontendPort')]",
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "[parameters('cpuCores')]",
                    "memoryInGB": "[parameters('memoryInGb')]"
                  }
                }
              }
            }
          ],
          "ipAddress":{
              "type": "Public",
              "ports":[
                  {
                      "protocol": "TCP",
                      "port": "[parameters('frontendPort')]"
                  }
              ]
          }
        }
      },
      {
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2018-07-01",
        "name": "[parameters('backendContainerName')]",
        "location": "[parameters('location')]",

        "properties": {
          "osType": "Linux",
          "restartPolicy": "Always",
          "containers": [
            {
              "name": "[parameters('backendContainerName')]",
              "properties": {
                "image": "[parameters('backendImage')]",
                "environmentVariables":[
                    {
                        "name": "MONGODB_URI",
                        "value": "[parameters('connectionString')]"
                    }
                ],
                "ports": [
                  {
                    "port": "[parameters('backendPort')]",
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "[parameters('cpuCores')]",
                    "memoryInGB": "[parameters('memoryInGb')]"
                  }
                }
              }
            }
          ],
          "ipAddress":{
              "type": "Public",
              "ports":[
                  {
                      "protocol": "TCP",
                      "port": "[parameters('backendPort')]"
                  }
              ]
          }
        }
      }
    ],
    "outputs": {}
  }